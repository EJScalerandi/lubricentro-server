generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String
  phone     String    @unique
  birthday  DateTime?
  notes     String?
  vehicles  Vehicle[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Service   Service[]
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique // ALTA | MEDIA | BAJA
  everyDays   Int
  description String?
  vehicles    Vehicle[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Vehicle {
  plate        String    @id
  clientId     Int
  brand        String?
  model        String?
  year         Int?
  categoryId   Int?
  lastService  DateTime?
  nextReminder DateTime?
  services     Service[]
  client       Client    @relation(fields: [clientId], references: [id])
  category     Category? @relation(fields: [categoryId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([clientId])
  @@index([categoryId])
}

model Service {
  id        Int      @id @default(autoincrement())
  vehicleId String
  clientId  Int
  date      DateTime
  odometer  Int?
  summary   String?
  createdAt DateTime @default(now())

  vehicle Vehicle @relation(fields: [vehicleId], references: [plate])
  client  Client  @relation(fields: [clientId], references: [id])

  @@index([vehicleId])
  @@index([clientId, date])
}
